# Production Environment Configuration
# Copy to .env.production and fill in your values
# IMPORTANT: Never commit .env.production to git!

# Domain (your production domain)
DOMAIN=example.com

# Frontend URL
FRONTEND_HOST=https://dashboard.example.com

# Environment
ENVIRONMENT=production

# Project
PROJECT_NAME="My Project"
STACK_NAME=my-project-production

# Backend Security (CHANGE THESE!)
BACKEND_CORS_ORIGINS="https://example.com,https://dashboard.example.com"
SECRET_KEY=generate-a-secure-random-string-here
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=use-a-strong-password

# Yandex Maps
VITE_YANDEX_MAPS_API_KEY=your-yandex-maps-api-key

# SMTP (configure for production emails)
SMTP_HOST=smtp.example.com
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAILS_FROM_EMAIL=noreply@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# PostgreSQL (use strong password!)
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=app_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=use-a-strong-database-password

# Docker images
DOCKER_IMAGE_BACKEND=your-registry/backend
DOCKER_IMAGE_FRONTEND=your-registry/frontend
TAG=latest

# Monitoring (optional but recommended)
SENTRY_DSN=https://your-sentry-dsn

# Traefik
USERNAME=admin
TRAEFIK_PASSWORD=use-a-strong-password
EMAIL=admin@example.com
