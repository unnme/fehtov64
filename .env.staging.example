# Staging Environment Configuration
# Copy to .env.staging and fill in your values
# IMPORTANT: Never commit .env.staging to git!

# Domain (your staging subdomain)
DOMAIN=staging.example.com

# Frontend URL
FRONTEND_HOST=https://dashboard.staging.example.com

# Environment
ENVIRONMENT=staging

# Project
PROJECT_NAME="My Project (Staging)"
STACK_NAME=my-project-staging

# Backend Security (CHANGE THESE!)
BACKEND_CORS_ORIGINS="https://staging.example.com,https://dashboard.staging.example.com"
SECRET_KEY=generate-a-secure-random-string-here
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=use-a-strong-password

# Yandex Maps
VITE_YANDEX_MAPS_API_KEY=your-yandex-maps-api-key

# SMTP (real email delivery)
SMTP_HOST=smtp.example.com
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAILS_FROM_EMAIL=noreply@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# PostgreSQL (use strong password!)
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=app_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=use-a-strong-database-password

# Docker images
DOCKER_IMAGE_BACKEND=app-backend
DOCKER_IMAGE_FRONTEND=app-frontend
TAG=latest

# Monitoring (optional)
SENTRY_DSN=

# Traefik
USERNAME=admin
TRAEFIK_PASSWORD=use-a-strong-password
EMAIL=admin@example.com
