# Local Development Environment
# Copy to .env and fill in your values

# Domain (for Traefik routing)
DOMAIN=localhost

# Frontend URL (for CORS and email links)
FRONTEND_HOST=http://localhost:5173

# Environment: local, staging, production
ENVIRONMENT=local

# Project
PROJECT_NAME="My Project"
STACK_NAME=my-project

# Backend
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173"
SECRET_KEY=changethis-in-production
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Yandex Maps
VITE_YANDEX_MAPS_API_KEY=your-yandex-maps-api-key

# Emails (optional for local dev)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis

# Docker images
DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend
TAG=latest

# Optional
SENTRY_DSN=

# Traefik (for staging/production)
USERNAME=admin
TRAEFIK_PASSWORD=admin
EMAIL=admin@example.com
